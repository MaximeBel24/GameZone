{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<div class="login">
    <div class="wrapper">
    <h1>Connexion</h1>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}


            <div class="input-box">
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" placeholder="E-mail" autofocus>
            </div>
            <div class="input-box">
                <input type="password" name="password" id="inputPassword" autocomplete="current-password" placeholder="Mot de Passe" required>            
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn" type="submit">
                Se connecter
            </button>

            <div class="register-link">
                <p>Vous n'avez pas de compte ? <a href="{{path('app_register')}}">Inscrivez-vous</a></p>
            </div>
        </form>
    </div>
</div>
{% endblock %}
