<section class="news section-p1">
    <h2>Les dernières actualités  et promotions Gaming</h2>
    <div class="news-container">
        {% for article in articles %}
                <div class="new">
                    <img src="{{ article.urlToImage }}" alt="Image non disponible">
                    <div class="body">
                        <h3 class="news-title">{{ article.title }}</h3>
                        <p>{{ article.description }}</p>
                        <p>Auteur:
                            {% if article.author %}
                                {{ article.author }}
                            {% else %}
                                Auteur inconnu
                            {% endif %}
                        </p>
                        <p>Date de publication:{{ article.publishedAt }}</p>
                        
                    </div>
                    <a href="{{ article.url }}">Lire l'article entier</a>
                </div>
        {% endfor %}
    </div>
</section>

