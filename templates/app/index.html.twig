{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

{# HERO SECTION START #}

<section id="hero" class="hero">
    <div class="img-overlay img-overlay-blur">
        <div class="img-title">Bienvenue sur GameZone</div>
        <p class="img-description">Et entrer dans le monde du Jeux Vidéo</p>
        <a href="{{path('app_categories')}}" class="img-link">Voir nos produits</a>
    </div>
</section>

{# HERO SECTION END #}

<section class="product section-p1">
    <h2>Derniers jeux Playstation</h2>
    <div class="pro-container">
        {% for product in playstation %}
            <div class="pro">
                <img src="{{ asset('uploads/images/' ~ product.picture) }}" alt="">
                <div class="body">                       
                    <h3 >{{ product.name }}</h3>
                    <p class="des">{{ product.shortDescription }}</p>
                     
                </div>
                <div class="foot">
                    <p class="price">{{ product.price }}€</p>
                     <a href="{{ path('show_products', {id: product.id}) }}" ><i class="fa-solid fa-magnifying-glass"></i></a>
                </div>
            </div>
        {% endfor %}
    </div>
</section>

