{% extends "base.html.twig" %}

{% block title %}Admin Modification Utilisateur
{% endblock %}

{% block body %}
<section class="form">
    <div class="wrapper">
        <h1 class="form-title">Modification d'utilisateur</h1>
                
        {{ form_errors(form) }}
        {{ form_start(form) }}            
            <div class="input-box">
                {{ form_row(form.lastname) }}
            </div>
            <div class="input-box">
                {{ form_row(form.firstname) }}
            </div>
            <div class="input-box">
                {{ form_row(form.username) }}
            </div>
            <div class="input-box">
                {{ form_row(form.email) }}
            </div>
            <div class="input-box">
                {{ form_row(form.address) }}
            </div>
            <div class="input-box">
                {{ form_row(form.zipcode) }}
            </div>
            <div class="input-box">
                {{ form_row(form.city) }}
            </div>
            <button class="btn" type="submit">
                Modifier l'utilisateur
            </button>
           
            {{ form_end(form) }}
        
    </div>  
</section>
{% endblock %}